{
	"name": "partygames.fun",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"node": ">=20.0.0",
		"npm": ">=10.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "node build-server.js",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"setup-db": "node scripts/setup-database.js",
		"generate:component": "node scripts/generate-component.js",
		"design:check": "npm run design:lint && npm run design:format:check",
		"design:fix": "npm run design:lint:fix && npm run design:format",
		"design:lint": "eslint --config .eslintrc-design-system.js src/lib/components/**/*.svelte",
		"design:lint:fix": "eslint --config .eslintrc-design-system.js src/lib/components/**/*.svelte --fix",
		"design:format": "prettier --write src/lib/components/**/*.svelte",
		"design:format:check": "prettier --check src/lib/components/**/*.svelte",
		"design:validate": "node scripts/validate-design-system.js"
	},
	"devDependencies": {
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@vitest/browser": "^3.2.3",
		"mdsvex": "^0.12.3",
		"playwright": "^1.53.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@sveltejs/adapter-node": "^5.3.1",
		"@types/pg": "^8.15.5",
		"@types/uuid": "^10.0.0",
		"dotenv": "^17.2.2",
		"pg": "^8.16.3",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"uuid": "^11.1.0"
	}
}
